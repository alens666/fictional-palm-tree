@model IctWizard.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Product Name:        
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            Product Price:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductPrice)
        </dd>
        <dt class = "col-sm-2">
            Release Date:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
    </dl>
    <div class="row">
        <div class="col-sm-12">
            <table>
                <thead>
                <tr></tr>
                </thead>
                <h4>
                Parts in product
                </h4>
                    <tbody>

                        @foreach (var productPart in Model.ProductParts)
                        {
                            <tr class="table" style="text-align: center">
                                <th>Part id</th>
                                <th>Part Name</th>
                                <th>Part quantity</th>
                            </tr>
                            <tr class="table" style="text-align: center">
                                <td>@productPart.Part.Id</td>
                                <td>@productPart.Part.Description</td>
                                <td>@productPart.Quantity</td>
                            </tr>


                        }

                    </tbody>
</table>  
            <hr />
        </div>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
